<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="sales_app_custom_header" inherit_id="bista_superasia_theme.superasia_custom_header">
        <xpath expr="//header[@id='header']" position="attributes">
            <attribute name="t-attf-class">#{'d-none' if hide_header or request.env.user.user_has_groups('superasia_salesrep_app.group_sales_rep') else ''}</attribute>
        </xpath>
        <xpath expr="//header[@id='header']" position="after">
            <div class="container-fluid" id="super_top_menu_cart" t-if="not hide_header and request.env.user.user_has_groups('superasia_salesrep_app.group_sales_rep')">
                <div class="container">
                    <div class="row">
                        <div class="col-12 col-sm-2 col-md-2 logo float-left pt-2 pl-4">
                            <div class="text-light float-left">
                                <a href="/sales-rep/home" class="font-weight-bold text-white"><i class="fa fa-angle-left"></i> Dashboard</a>
                            </div>
                        </div>
                        <div class="col-12 col-md-8 col-sm-8 text-center">
                        </div>
                        <div class="col-12 col-sm-2 col-md-2 text-right pt-2"></div>  
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="sales_rep_frontend_layout" name="Sales Rep Frontend Layout" inherit_id="web.frontend_layout">
        <xpath expr="//div[@id='wrapwrap']/footer" position="attributes">
            <attribute name="t-if">not request.env.user.user_has_groups('superasia_salesrep_app.group_sales_rep') </attribute>
        </xpath>
    </template>

</odoo>
