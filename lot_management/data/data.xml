<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="archive_production_lot" model="ir.cron">
            <field name="name">Auto archive production lot rows conditionally</field>
            <field name="model_id" ref="lot_management.model_stock_production_lot"/>
            <field name="state">code</field>
            <field name="code">
                model.archive_production_lot()
            </field>
            <field name="user_id" ref="base.user_admin"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="priority">1</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>