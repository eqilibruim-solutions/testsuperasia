<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_hide_dates_from_lot_serial" model="ir.ui.view">
        <field name="name">view.hide.dates.from.lot.serial</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="product_expiry.view_move_form_expiry"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_date']" position="attributes" >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='life_date']" position="attributes" >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='alert_date']" position="attributes" >
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_active_from_lot_serial_tree" model="ir.ui.view">
        <field name="name">view.active.from.lot.serial.tree</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="active" readonly="1"/>
            </xpath>
        </field>
    </record>

