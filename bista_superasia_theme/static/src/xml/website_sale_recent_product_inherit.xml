    <!-- Product Recent View in Website Form -->
<t t-extend="website_sale.productsRecentlyViewed">
    <t t-jquery="div.row" t-operation="attributes">
        <attribute name="class" value="row w-100"/>
    </t>
    <t t-jquery="div.o_carousel_product_card_footer" t-operation="attributes">
        <attribute name="class" value="o_carousel_product_card_footer card-footer d-flex align-items-center text-black"/>
    </t>
    <t t-jquery="button.js_add_cart" t-operation="replace">
        <t t-if="product.avail_qty >= 1">
            <button type="button" role="button" class="btn btn-primary js_add_cart ml-auto"
                    title="Add to Cart">
                <i class="fa fa-fw fa-shopping-cart"/>
            </button>
        </t>
    </t>
    <t t-jquery="div.o_carousel_product_card_body" t-operation="append">
        <t t-if="product.is_user_admin_b2b">
            <div>
                <h6 class="product_uom"><t t-esc="product.product_uom"/></h6>
            </div>
        </t>
    </t>
    <t t-jquery="div.font-weight-bold" t-operation="after">
        <t t-if="product.is_user_admin_b2b and product.b2b_old_price > 0.0 and product.b2b_old_price > product.list_price and product.list_price > 0.0">
            <div class="d-block font-weight-bold text-decoration-line-through ml-1 text-danger" t-raw="product.b2b_old_price_html" />
        </t>
        <t t-if="product.is_user_public_b2c and product.b2c_old_price > 0.0 and product.b2c_old_price > product.b2c_pricelist_price and product.b2c_pricelist_price > 0.0">
            <div class="d-block font-weight-bold text-decoration-line-through ml-1 text-danger" t-raw="product.b2c_old_price_html" />
        </t>
    </t>
</t>
